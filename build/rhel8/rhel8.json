{
    "variables": {
        "build_version": "{{ env `BUILD_VERSION`}}"
    },
    "builders": [{
        "type": "virtualbox-iso",
        "vm_name": "rmit-rhel-8-x86_64",
        "guest_os_type": "RedHat_64",
        "disk_size": "61440",
        "iso_checksum_type": "sha256",
        "iso_checksum": "005d4f88fff6d63b0fc01a10822380ef52570edd8834321de7be63002cc6cc43",
        "iso_url": "http://satellite.its.rmit.edu.au/pub/ks/repo/rhel-8.0-x86_64-dvd.iso",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_timeout": "20m",
        "shutdown_command": "sudo -S shutdown -P now",
        "http_directory": "http",
        "boot_command": [
            "<wait><esc><esc>",
            "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kickstart.cfg<enter>"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "vagrantfile_template": "files/Vagrantfile",
        "output": "rmit-interim-rhel-8-x86_64-nocm-{{.Provider}}-{{user `build_version`}}.box"
    }],
    "provisioners": [{
        "type": "file",
        "source": "files/README.md",
        "destination": "/home/vagrant/README.md"
    },{
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo mkdir /tmp/vboxguest",
            "sudo mount -t iso9660 -o loop,ro /home/vagrant/VBoxGuestAdditions.iso /tmp/vboxguest",
            "cd /tmp/vboxguest",
            "sudo ./VBoxLinuxAdditions.run",
            "cd /tmp",
            "sudo umount /tmp/vboxguest",
            "sudo rmdir /tmp/vboxguest",
            "rm /home/vagrant/VBoxGuestAdditions.iso"
        ]
    }]
}
