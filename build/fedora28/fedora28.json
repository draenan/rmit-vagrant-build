{
    "variables": {
        "build_version": "{{ env `BUILD_VERSION`}}"
    },
    "builders": [{
        "type": "virtualbox-iso",
        "vm_name": "rmit-fedora-server-28-x86_64",
        "guest_os_type": "Fedora_64",
        "disk_size": "61440",
        "iso_checksum_type": "sha256",
        "iso_checksum": "8d59a25052e05758c15fe9daa3bc472b5619791b442e752450bba7f1eeca9c1a",
        "iso_url": "http://satellite.its.rmit.edu.au/pub/ks/repo/Fedora-Server-dvd-x86_64-28-1.1.iso",
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "ssh_timeout": "20m",
        "shutdown_command": "sudo -S shutdown -P now",
        "http_directory": "http",
        "boot_command": [
            "<wait><esc><esc>",
            "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kickstart.cfg<enter>"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "vagrantfile_template": "files/Vagrantfile",
        "output": "rmit-fedora-server-27-x86_64-nocm-{{.Provider}}-{{user `build_version`}}.box"
    }],
    "provisioners": [{

        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo mkdir /tmp/vboxguest",
            "sudo mount -t iso9660 -o loop,ro /home/vagrant/VBoxGuestAdditions.iso /tmp/vboxguest",
            "sudo dnf install -y gcc make bzip2 kernel-devel elfutils-libelf-devel",
            "cd /tmp/vboxguest",
            "sudo ./VBoxLinuxAdditions.run",
            "cd /tmp",
            "sudo umount /tmp/vboxguest",
            "sudo rmdir /tmp/vboxguest",
            "rm /home/vagrant/VBoxGuestAdditions.iso"
        ]
    }]
}
